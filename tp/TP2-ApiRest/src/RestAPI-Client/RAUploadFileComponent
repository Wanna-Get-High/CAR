RAAuthentificationComponent subclass: #RAUploadFileComponent	instanceVariableNames: 'file fileName'	classVariableNames: ''	poolDictionaries: ''	category: 'RestAPI-Client'I am the component used to present the form required to upload a file to the server=========================accessing---------------------file	^ filefile: anObject	file := anObjectfileName	^ fileNamefileName: anObject	fileName := anObject---------------------rendering---------------------renderContentOn: html		html form multipart		with: [			html table: [				self renderFileOn: html.				self renderFileNameOn: html.				self renderUsernameOn: html.				self renderPasswordOn: html ].			self renderButtonOn: html ]renderFileNameOn: html	html tableRow: [		html tableData: [			html label				for: #fileName;				with: 'File name:' ].		html tableData: [			html textInput				id: #fileName;				on: #fileName of: self ] ]renderFileOn: html	html tableRow: [		html tableData: [			html label				for: #file;				with: 'File path:' ].		html tableData: [			html fileUpload				id: #file;				on: #file of: self ] ]---------------------private---------------------submit	| client url index |		user ifNil: [ self inform: 'Invalid username' onAnswer: [] ].	password ifNil: [ self inform: 'Invalid password' onAnswer: [] ].	file ifNil: [ self inform: 'Invalid file path' onAnswer: [] ].	fileName isEmptyOrNil ifTrue: [ fileName := file fileName ].	index := root findString: 'directory'.	url := root copyReplaceFrom: index to: index+8 with: 'file'.	client := ZnClient new		url: (url, '/', fileName);		setBasicAuthenticationUsername: user password: password;		contents: file rawContents asByteArray;		contentType: file contentType greaseString asZnMimeType.	client put.	client response isError ifTrue: [ self inform: ('An error occurred: ', client response statusLine code asString, ' - ', client response statusLine reason) onAnswer: [] ].	self inform: 'Request sent' onAnswer: [ self answer ].---------------------