RAAuthentificationComponent subclass: #RACreateDirectoryComponent	instanceVariableNames: 'dirName'	classVariableNames: ''	poolDictionaries: ''	category: 'RestAPI-Client'I am the component used to present the form required to create a new directory=========================accessing---------------------dirName	^ dirNamedirName: aName	dirName := aName---------------------rendering---------------------renderContentOn: html		html form: [		html table: [			self renderDirNameOn: html.			self renderUsernameOn: html.			self renderPasswordOn: html ].		self renderButtonOn: html ]renderDirNameOn: html	html tableRow: [		html tableData: [			html label				for: #dirName;				with: 'Directory name:' ].		html tableData: [			html textInput				id: #dirName;				on: #dirName of: self ] ]---------------------private---------------------submit	| client |		user ifNil: [ self inform: 'Invalid username' onAnswer: [] ].	dirName ifNil: [ self inform: 'Invalid directory name' onAnswer: [] ].	password ifNil: [ self inform: 'Invalid password' onAnswer: [] ].		client := ZnClient new		url: (self root, '/', dirName);		setBasicAuthenticationUsername: user password: password.	client post.	client response isError ifTrue: [ self inform: ('An error occurred: ', client response statusLine code asString, ' - ', client response statusLine reason) onAnswer: [] ].	self inform: 'Request sent' onAnswer: [ self answer ].---------------------